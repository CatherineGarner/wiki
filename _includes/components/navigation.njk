<nav aria-label="{{ 'mainNavigation' | translate }}"
      class="c-navigation" 
      data-component="navigation">
  <div class="c-navigation__headline">
    <button class="c-navigation__burger" data-component="navigationBurger">
      <svg width="22" height="16" viewbox="0 0 22 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect width="22" height="2" rx="1" fill="#393C3C"/>
        <rect x="8" y="7" width="14" height="2" rx="1" fill="#393C3C"/>
        <rect x="3" y="14" width="19" height="2" rx="1" fill="#393C3C"/>
      </svg>
      <span class="visuallyhidden">{{ 'openMenu' | translate }}</span>
    </button>

    <a href="/" class="c-navigation__site_title">
      <img class="c-navigation__logo" src="/images/logo.png" alt=""/>

      <span class="c-navigation__site-title-text">
        {{ 'siteTitle' | translate }}
      </span>
    </a>
  </div>

  <div class="c-navigation__main_navigation" data-component='mainNavigation'>
    <ul>
      <li class="c-navigation__level1">
        <button class="c-navigation__level1_toggler">
          {{ 'articles' | translate }}
        </button>
        <ul>
          {% for category in collections.theoryNavigation %}
            <li class="c-navigation__level2">
              <button class="c-navigation__level2_toggler">
                {{ category.data.name }}
              </button>
              <ul>
                {% for category in category.articles %}
                  <li class="c-navigation__level3">
                    <a href="{{ category.url }}">{{ category.data.name }}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
        </ul>
      </li>
      <li class="c-navigation__level1">
        <a href="/cases">{{ 'cases' | translate }}</a>
      </li>
    </ul>
  </div>
</nav>

<div class="c-navigationSpacer"></div>